SELECT *
FROM
  `elevated-server-347503.Covid.covid_deaths`
ORDER BY
 3,4

SELECT *
FROM 
  `elevated-server-347503.Covid.covid_vaccinations`
ORDER BY
3,4

SELECT
  location,
  date,
  total_cases,
  new_cases,
  total_deaths,
  population
FROM
  `elevated-server-347503.Covid.covid_deaths`
ORDER BY 
  1,2

-- Looking At Total Cases vs Total Deaths
-- Shows likehood of dying from contracting covid in your country
SELECT
  location,
  date,
  total_cases,
  new_cases,
  (total_deaths / total_cases) * 100 AS DeathPercentage
FROM
  `elevated-server-347503.Covid.covid_deaths`
WHERE
  location = "United States"
  AND continent is not null
ORDER BY
  1,2

-- Looking at Total Cases vs Population
-- Shows what percentage of population got Covid
SELECT
  location,
  date,
  population,
  total_cases,
  (total_cases / population) * 100 AS PecentPopulationInfected
FROM
  `elevated-server-347503.Covid.covid_deaths`
ORDER BY 
  1,2


-- Looking at countires with highest infection rates compared to population
SELECT
  location,
  population,
  MAX(total_cases) AS HighestInfectionCount,
  MAX((total_cases / population)) * 100 AS PercentPopulationInfected
FROM
  `elevated-server-347503.Covid.covid_deaths`
GROUP BY
  location, population
ORDER BY 
  PercentPopulationInfected DESC

--Looking at countries with highest death count per population
SELECT
  location,
  MAX(CAST(total_deaths as int)) AS TotalDeathCount
FROM
  `elevated-server-347503.Covid.covid_deaths`
-- WHERE location = United States
WHERE
  continent IS NOT NULL
GROUP BY
  location
ORDER BY
  TotalDeathCount DESC

-- Continents with highest death count per population
SELECT
  continent,
  MAX(CAST(total_deaths AS int)) AS TotalDeathCount
FROM
  `elevated-server-347503.Covid.covid_deaths`
-- WHERE location = United States
WHERE
  continent IS NOT NULL
GROUP BY
  continent
ORDER BY
  TotalDeathCount DESC

-- Global Numbers
SELECT
  SUM(new_cases) AS total_cases,
  SUM(CAST(new_deaths AS int)) AS total_deaths,
  SUM(CAST(new_deaths as int)) / SUM(new_cases) * 100 AS DeathPercentage
FROM
  `elevated-server-347503.Covid.covid_deaths`
WHERE
  continent IS NOT NULL
--GROUP BY date
ORDER BY
  1,2

-- Total population vs vaccinations
SELECT
  dea.date,
  dea.location,
  dea.total_cases,
  vac.new_vaccinations,
  SUM(vac.new_vaccinations) OVER (PARTITION BY dea.location ORDER BY CAST(dea.location AS STRING), dea.date) AS RollingPeopleVaccinated
FROM
  `elevated-server-347503.Covid.covid_deaths` AS dea
JOIN
  `elevated-server-347503.Covid.covid_vaccinations` AS vac
ON
  dea.location = vac.location AND
  dea.date = vac.date
WHERE
  dea.continent IS NOT NULL;

-- Creating view for later visulization
SELECT
  dea.continent,
  dea.location,
  dea.date,
  dea.population,
  vac.new_vaccinations,
  SUM(vac.new_vaccinations) OVER (PARTITION BY dea.location ORDER BY CAST(dea.location AS STRING), dea.date) AS RollingPeopleVaccinated
FROM
  `elevated-server-347503.Covid.covid_deaths` AS dea
JOIN
  `elevated-server-347503.Covid.covid_vaccinations` AS vac
ON
  dea.location = vac.location
AND
  dea.date = vac.date
WHERE
  dea.continent IS NOT NULL
